<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/color1"
    tools:context=".manage_price">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="286dp"
        android:layout_height="49dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="168dp"
        android:text="@string/title_edit_menu_makanan"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="578dp"
        android:layout_height="701dp"
        app:srcCompat="@drawable/menumakan"
        tools:layout_editor_absoluteX="686dp"
        tools:layout_editor_absoluteY="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Makanan"
        android:textColor="@color/black"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="286dp" />

    <EditText
        android:id="@+id/foodNameEditText"
        android:layout_width="478dp"
        android:layout_height="49dp"
        android:hint="Edit Food Name"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga Makanan"
        android:textColor="@color/black"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="393dp" />

    <EditText
        android:id="@+id/foodPriceEditText"
        android:layout_width="476dp"
        android:layout_height="46dp"
        android:hint="Edit Food Price (Rp)"
        android:inputType="number"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveChanges"
        android:text="Update"
        tools:layout_editor_absoluteX="528dp"
        tools:layout_editor_absoluteY="508dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="820dp" />



</androidx.constraintlayout.widget.ConstraintLayout>